<?xml version="1.0" encoding="utf-8"?>



<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".LoginActivity"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001F3B"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1C3C58">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:background="#001F3B">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bak2"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/a_3_1" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="#FFffff"
                    android:textSize="20sp" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#1C3C58"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"

                android:background="#E6E6E6"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:layout_marginBottom="5dp"
                    android:background="#E6E6E6"
                    android:gravity="center"
                    android:hint="@string/username"
                    android:inputType="text"
                    android:textColor="#004964"
                    android:textColorLink="@color/colorPrimary"

                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#b7b4b4"
                    android:gravity="center"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:selectAllOnFocus="false"
                    android:singleLine="false"
                    android:textColor="#004964"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#1C3C58"
                android:orientation="vertical"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#001F3B"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#1C3C58"
                android:orientation="vertical"

                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_alignParentTop="true"
                    app:srcCompat="@drawable/jalil1"
                    android:layout_gravity="center"/>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/select_lan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#001F3B"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/buttonlog"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:text="@string/login"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonsin"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button"

                android:text="@string/signup"
                android:textColor="#ffffff"
                android:textSize="18sp"


                />
        </LinearLayout>
    </RelativeLayout>


</ScrollView>
</android.support.constraint.ConstraintLayout>